<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container header">
    <%= link_to root_path do %>
      <div class="brand">
        <%= image_tag("TSLogo.png", class: 'brand-image') %>
        <div class="brand-title">
          <h1>Track Sense</h1>
          <h3>Music to your brain, every day</h3>
        </div>
      </div>
    <% end %>

    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
          <button data-toggle="dropdown" aria-expanded="false">
            <%= image_tag("TSMore.png", class: 'nav-more') %>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">About</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Leave a Suggestion</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <% if logged_in? %>
            <button data-toggle="dropdown" aria-expanded="false">
              <div class="nav-user">You</div>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          <% else %>
            <%= link_to "Profile", '#login-form', class: 'fancybox' %>
          <% end %>
        </li>
        <li class="nav-item">
          <a class="fancybox" href="#submission-form" style="padding:0px;">
              <%= image_tag("TSAdd.png", class: 'nav-add') %>
          </a>
        </li>
      </ul>

      <!-- Popup - This probably does not belong here -->
      <div style="display:none;">
        <div id="login-form">
          <%= render 'shared/popover_login_form' %>
        </div>
      </div>
      <div style="display:none;">
        <div id="submission-form">
          <%= render 'shared/popover_submission_form' %>
        </div>
      </div>
    </nav>

  </div>
</header>
