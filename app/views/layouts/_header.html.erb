<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container header">
    <%= link_to root_path do %>
      <div class="brand">
        <%= image_tag("TSLogo.png", class: 'brand-image') %>
        <div class="brand-title">
          <h1>Track Sense</h1>
          <h3>Music to your brain, every day</h3>
        </div>
      </div>
    <% end %>

    <div>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item">
          <button data-toggle="dropdown" aria-expanded="false">
            <%= image_tag("TSMore.png", class: 'nav-more') %>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#">About</a></li>
            <li><a href="#">FAQ</a></li>
            <li><a href="#">Leave a Suggestion</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <% if logged_in? %>
            <button class="nav-profile glyphicon glyphicon-user" data-toggle="dropdown" aria-expanded="false">
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><a href="#">Email Digest</a></li>
              <li><%= link_to "Log out", logout_path, method: "delete" %></li>
            </ul>
          <% else %>
            <%= link_to "", '#login-form', class: 'fancybox glyphicon glyphicon-user' %>
          <% end %>
        </li>
        <li class="nav-item">
          <% if logged_in? %>
            <a class="fancybox" href="#submission-form" style="padding:0px;">
                <%= image_tag("TSAdd.png", class: 'nav-add') %>
            </a>
          <% else %>
            <a class="fancybox" href="#login-form" style="padding:0px;">
              <%= image_tag("TSAdd.png", class: 'nav-add') %>
            </a>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</header>
