<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= favicon_link_tag '/favicon.ico' %>

    <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
      <%= yield %>
      <!--
      <%= debug(params) if Rails.env.development? %> -->
    </div>

    <iframe id="sc-widget" src="https://w.soundcloud.com/player/?url=http://api.soundcloud.com/users/1539950/favorites" width="25%" height="50" scrolling="no" frameborder="no"></iframe>

    <!-- Popup - This probably does not belong here -->
    <div style="display:none;">
      <div id="login-form">
        <%= render 'shared/popover_login_form' %>
      </div>
    </div>
    <div style="display:none;">
      <div id="submission-form">
        <%= render 'shared/popover_submission_form' %>
      </div>
    </div>

  </body>
</html>
