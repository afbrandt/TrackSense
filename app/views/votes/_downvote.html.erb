<%= form_for(vote, remote: true, method: :delete) do |f| %>
  <%= hidden_field_tag :id, vote.id %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= hidden_field_tag :votable_id, vote.votable_id %>
  <%= hidden_field_tag :votable_type, vote.votable_type %>
  <%= button_tag(type: 'submit', class: "like-button") do %>
    <i class="vote-icon glyphicon glyphicon-heart voted"></i>
  <% end %>
<% end %>
