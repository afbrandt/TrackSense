<%= form_for(Vote.new, remote: true) do |f| %>
  <%= hidden_field_tag :user_id, current_user.id %>
  <%= hidden_field_tag :votable_id, track.id %>
  <%= hidden_field_tag :votable_type, :Track %>
  <%= button_tag(type: 'submit', class: "like-button") do %>
    <i class="vote-icon glyphicon glyphicon-heart"></i>
  <% end %>
<% end %>
