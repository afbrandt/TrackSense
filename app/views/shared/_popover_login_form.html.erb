<div class="col-md-12 login-wrapper">
  <div class="col-md-6 login-column">
    <h2 class="login-header">Join the community</h2>
    <%= form_for(User.new) do |f| %>
      <div class="form-wrapper">
        <%= f.label :name, hidden: true %>
        <%= f.text_field :username, class: 'form-control', :placeholder => "Username" %>

        <%= f.label :email, hidden: true %>
        <%= f.text_field :email, class: 'form-control', :placeholder => "Email" %>

        <%= f.label :password, hidden: true %>
        <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>

        <%= f.label :password_confirmation, hidden: true %>
        <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => "Confirmation" %>

        <%= button_tag(:type => "f.submit", :class => "btn btn-primary login-btn") do %>
            Create Account <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </div>

    <% end %>
  </div>

  <div class="col-md-6 login-column">
    <h2 class="login-header">Sign in</h2>
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-wrapper">
        <%= f.label :email, hidden: true %>
        <%= f.text_field :email, class: 'form-control', :placeholder => "Email" %>

        <%= f.label :password, hidden: true %>
        <%= f.password_field :password, class: 'form-control', :placeholder => "Password"  %>

        <%= f.label :remember_me, class: "remember-control" do %>
        <%= f.check_box :remember_me %> Remember me
        <% end %>

        <%= button_tag(:type => "f.submit", :class => "btn btn-primary login-btn") do %>
            Login In <span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
