<div class="col-md-12 group-form-wrapper">
  <h2 class="group-form-header">Create a group!</h2>
  <% if logged_in? %>
    <div class="form-wrapper">
      <%= form_for(Group.new) do |f| %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Group Name"  %>
        <%= f.submit "Make it!", class: "btn btn-primary" %>
      <% end %>
    </div>
  <% else %>
    <p>Log in or sign up</p>
  <% end %>
</div>
