<% provide(:title, "Track Sense") %>
<div class="main-content">
  <div class="profile-wrapper col-md-12">
    <div class="profile-header-wrapper row">
      <div class="col-md-4">
        <%= image_for @user, "profile-image" %>
      </div>
      <div class="profile-name col-md-4">
        <h2> <%= current_user.username %> </h2>
      </div>
      <div class="profile-meta col-md-4">
        <div class="profile-nav-1 col-md-6">
          <h3><%= @user.votes.count %></h3>
          <h2>Upvoted</h2>
        </div>
        <div class="profile-nav-2 col-md-6">
          <h3><%= @user.submissions.count %></h3>
          <h2>Made</h2>
        </div>
      </div>
    </div>
    <div class="profile-songs-wrapper row">
      <% if @user.submissions.any? %>
      <%= render @user.submissions %>
      <% end %>
    </div>
  </div>
</div>
